<!DOCTYPE html>
<html lang="en" style="    background-color: khaki;" >

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Post</title>
    <style>
        /* Internal CSS styles */

        /* Set the font family for the entire body */
        body {
            font-family: Arial, sans-serif;
        }

        /* Style the form container */
        form {
            border-radius: 10px;
            margin-top: 100px;
            margin-right: 20%;
            margin-left: 20%;
            padding: 20px;
            border: 1px solid #2c9008;
        }



        /* Style text input fields */
        input[type="text"] {
            width: 100%;
            border-radius: 5px;
            /* Take up full width of the parent container */
            padding: 10px;
            /* Add padding inside the input field */
            margin-bottom: 10px;
            /* Add margin at the bottom to separate elements */
            box-sizing: border-box;
            /* Include padding and border in the element's total width and height */
        }

        /* Style the submit button */
        button {
            border-radius: 5px;
            background-color: #4CAF50;
            /* Green background color */
            color: white;
            /* White text color */
            padding: 14px 20px;
            /* Add padding inside the button */
            margin: 8px 0;
            /* Add margin around the button */
            border: none;
            /* Remove border */
            cursor: pointer;
            /* Change cursor to pointer on hover */
            width: 100%;
            /* Take up full width of the parent container */
        }
    </style>
</head>

<body>
    <!-- HTML body content -->

    <form method="post" action="/add-new-post">
        <p>Title</p>
        <input type="text" name="title">
        <p>Content</p>
        <input style="padding: 50px;"  type="text" name="content">
        <input type="hidden" name="userId" id="userid-input">
        <button type="submit">submit</button>
    </form>

    <!-- JavaScript code -->
    <script>
        // JavaScript code to retrieve user data from local storage and populate the hidden input field
        let userData = localStorage.getItem('userData');
        if (userData) {
            userData = JSON.parse(userData);
            console.log('userdata', userData);
            document.getElementById('userid-input').value = userData.id;
        }
    </script>
</body>

</html>